{
  "name": "2019.jsconfbp.com",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "scss": "node-sass --include-path / --output-style compressed -o dist/css src/sass",
    "autoprefixer": "postcss -u autoprefixer -r dist/css/*",
    "copy": "cp -Rf src/*.html dist && cp -Rf src/img dist",
    "build": "npm run scss && npm run autoprefixer && npm run copy",
    "start": "docker-compose up -d",
    "stop": "docker-compose down",
    "watch": "npx npm-watch"
  },
  "dependencies": {
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "node-sass": "^4.6.0",
    "npm-watch": "0.3.0",
    "postcss-cli": "^4.1.1"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions"
  ],
  "watch": {
    "build": "src/**/*.*"
  }
}
